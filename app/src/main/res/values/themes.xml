<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instantapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <!--        <item name="android:foreground">@drawable/ripple_custom</item>-->
        <item name="android:background">@color/bottomNavigationBackground</item>
        <!--<item name="itemBackground">@drawable/ripple_custom</item>-->
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <!--        <item name="android:fontFamily">@font/varela_round</item>-->

    </style>
</resources>